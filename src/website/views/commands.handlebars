{{{script "https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.0/dist/alpine.min.js"}}}

<div class="text-center" id="commands" x-data="commandsState()">
    {{> commands/search }}

    {{#each commands}}
        {{> commands/command }}
    {{/each}}
</div>

<script>
    function commandsState() {
        return {
            commands: {{{json commands}}},
            filter: "",
            isTrue(name) {
                return name.startsWith(this.filter.toLowerCase());
            }
        }
    }
</script>

