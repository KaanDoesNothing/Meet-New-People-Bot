{{> dashboard/sidebar }}

<script>
    window._guild = {{{json guild}}}
</script>

<div class="card bg-light" id="guild-card">
    <div class="card-header text-center">
        <label>{{guild.name}}</label>
        <label id="module-text"></label>
        <img src="" id="guild-icon" width="32px">
    </div>
    <div class="card-body">
        <div class="card bg-dark" id="guild-card-sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link btn" onclick="setModule('General')">General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn" onclick="setModule('Channels')">Channels</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn" onclick="setModule('Moderation')">Moderation</a>
                </li>
            </ul>
        </div>

        <div class="card bg-dark text-white" id="guild-card-content">
            <div class="module-tab" id="module-tab-General">
                <label>prefix: {{guild.settings.prefix}}</label>
            </div>
            <div class="module-tab" id="module-tab-Moderation">
                <label>test</label>
            </div>
        </div>
    </div>
</div>

<script>
    $(".module-tab").hide();
    $("#guild-icon").attr("src", window._guild.iconURL);

    function setModule(module) {
        $(".module-tab").hide();
        $("#module-text").text(`(${module})`);

        $("#module-tab-" + module).show();
    }

    setModule("General");
</script>

<style>
    #guild-card {
        margin: 5vh 5vh 5vh 20vh;
        height: 80vh;
    }

    #guild-icon {
        border-radius: 50%;
    }

    #guild-card-sidebar {
        {{!-- outline: black 5px solid; --}}
        height: 100%;
        width: 10%;
        width: min-content;
        float: left;
        border-radius: 5px;
        margin: 0% 1%;
    }

    #guild-card-content {
        height: 100%;
    }

    .nav-link {
        color: white !important;
        text-align: center;
    }
