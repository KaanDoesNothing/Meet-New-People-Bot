nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
    div(class="container-fluid")
        a(class="navbar-brand" href="/") #{client.user.username}

        button(class="navbar-toggler" type="button")
            span(class="navbar-toggler-icon")

        div(class="d-flex")
            a(class="btn text-white" href="/commands") Commands

            if session
                a(class="btn text-white" href=`/profile/${session.id}`) #{session.username}
            else
                a(class="btn text-white" href="/" id="loginButton") Login

script.
    $(document).on("turbolinks:load", () => {
        let url = `https://discordapp.com/oauth2/authorize?response_type=code&client_id=#{client.user.id}&scope=identify&redirect_uri=${window.location.origin}/auth/callback`;

        $("#loginButton").attr("href", url);
    });